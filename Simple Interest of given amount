/*Simple interest of given amount*/
#include<stdio.h>
#include<conio.h>
void main()
{
  float P,R,SI;
  int T;
  clrscr();
  printf("Enter the principle amount taken:\n");
  scanf("%f",&P);
  printf("Enter rate of interest for the amount:\n");
  scanf("%f",&R);
  printf("Enter the timeperiod in years:\n");
  scanf("%d",&T);
  SI=(P*T*R)/100;
  printf("Amount: Rs%3f\n",P);
  printf("Rate: %3f%\n",R);
  printf("Time: %3d years\n",T);
  printf("Simple Interest: %3f",SI);
  getch();
}

